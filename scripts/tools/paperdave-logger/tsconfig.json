{
  "compilerOptions": {
    "declarationDir": "dist",
    "target": "esnext",
    "module": "esnext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "composite": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "exclude": ["**/node_modules", "**/dist"],
  "include": ["src/**/*.ts"]
}
